/*
 * Template Files
 *
 */
#define CXXPACKAGE 
#include "../../../../../config/lclib.tmpl"

/*
 * Headers
 *
 */

INCPATH	= -I. -I../../../../src
EXTRACXXOPT = $(INCPATH)

/*
 * Package Name
 *
 */
 
LIBNAME	= TTL4JAnalysis

OBJS		= $(LIBNAME).$(ObjSuf)
SONAME		= lib$(LIBNAME).$(DllSuf).$(SOREV)
JSFSOLIB	= $(SONAME)

/*
 * You don't have to edit anything below here
 *
 */
DICTNAME	= $(LIBNAME)Dict

ALLOBJS 	= $(OBJS) $(DICTNAME).$(ObjSuf)

SRCS		= $(subst .$(ObjSuf),.$(SrcSuf),$(ALLOBJS))

HDRS		= $(LIBNAME).h

/*
 * Make Targets
 *
 */

all:: $(JSFSOLIB)

$(JSFSOLIB): $(ALLOBJS)
	$(LD) -o $@ $(SOFLAGS) $(ALLOBJS)
	$(RM) $(subst .$(SOREV),,$@)
	$(LN) $@ $(subst .$(SOREV),,$@)

InstallSharedLibrary($(LIBNAME),$(SOREV),$(INSTALLDIR))

clean:: 
	@rm -f *.$(ObjSuf) core $(DICTNAME)*

depend:: $(SRCS)
	makedepend -I$(ROOTSYS)/include -I$(JSFROOT)/include $(INCPATH) $(SRCS)

distclean:: clean
	@rm -f Makefile $(JSFSOLIB) *.$(SOEXT)
	@rm -f *.root *.tdr *.out *~ core

$(DICTNAME).$(SrcSuf): $(HDRS) LinkDef.h
	@echo "Generating dictionary ..."
	rootcint -f $(DICTNAME).$(SrcSuf) \
 		-c -I$(JSFROOT)/include $(INCPATH) $(HDRS) LinkDef.h


